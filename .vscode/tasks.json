{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe сборка активного файла",
            "command": "cl.exe",
            "args": [
                "/std:c++20",
                "/Zi",
                "/EHsc",
                "/nologo",

                "/Fo${workspaceFolder}/build/",
                "/Fd${workspaceFolder}/build/",
                "/Fe${workspaceFolder}/build/${fileBasenameNoExtension}.exe",

                "${file}",

                "/I${workspaceFolder}/include",
                "/I\"C:/Libraries/vcpkg/installed/x64-windows/include\"",
                "C:/Libraries/vcpkg/installed/x64-windows/lib/gtest.lib",
                "C:/Libraries/vcpkg/installed/x64-windows/lib/manual-link/gtest_main.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Задача создана отладчиком."
        }
    ],
    "version": "2.0.0"
}